<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <title>E-Pemilu | Insight</title>
        <link href="/styles/stylesNew.css" rel="stylesheet" />
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
        <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script defer src="/js/scripts.js"></script>
    </head>
    <body class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <!-- Navbar Brand-->
            <a class="navbar-brand ps-3" href="/"><img src="/images/ballot.png" style="height: 35px">
                E-Pemilu
            </a>
            <!-- Sidebar Toggle-->
            <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
        </nav>
        <div id="layoutSidenav">
            <div id="layoutSidenav_nav">
                <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                    <div class="sb-sidenav-menu">
                        <div class="nav">
                            <div class="sb-sidenav-menu-heading">MENU</div>
                            <a class="nav-link" href="/admin">
                                <div class="sb-nav-link-icon"><i class="fas fa-vote-yea" width="16" height="16"></i></div>
                                Pemilihan
                            </a>
                            <a class="nav-link" href="/logout">
                                <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt" width="16" height="16"></i></div>
                                Keluar
                            </a>
                        </div>
                    </div>
                    <div class="sb-sidenav-footer">
                        <div class="small">Login sebagai:</div>
                        <%= username %>
                    </div>
                </nav>
            </div>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="my-4">Daftar Pemilu</h1>
                        <div class="card mb-4">
                            <div class="card-body">
                                Halaman ini menunjukkan semua pemilihan terdaftar Anda.
                            </div>
                        </div>
                        <% pemilu.forEach((element) => { %>
                        <div class="card mb-4">
                            <% if(status.includes(element.pemilihan_id)) { %>
                            <div class="card-body">
                                <h5 class="card-title"><%= element.nama %></h5>
                                <a href="/pemilih/pemilu/mulai/<%= element.pemilihan_id %>" class="btn disabled">Mulai</a>
                            </div>
                            <% }else{ %>
                            <div class="card-body">
                                <h5 class="card-title"><%= element.nama %></h5>
                                <a href="/pemilih/pemilu/mulai/<%= element.pemilihan_id %>" class="btn btn-primary">Mulai</a>
                            </div>
                            <% } %>
                        </div>
                        <% }); %>
                    </div>
                </main>
            </div>
        </div>
    </body>
</html>