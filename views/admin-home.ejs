<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="admin-home.css">
    <title>Admin Home</title>
</head>
<body>
    <%- include('./header.ejs')  %>
    <main>
        <form method="post" action="addPemilu">
            <div id="conBtn">
                <button id="btnTambah" type="submit">Tambah</button>
            </div>
        </form>
        <div id="container">
            <!--loop daftar pemilihan-->
            <% for(const row of table) { %>
            <form method="post" action="model">
                <button class="button" type="submit">
                    <div class="card">
                        <p id="nama"><%=row.nama%></p>
                        <input id="id" name="idPemilihan" value="<%= row.pemilihan_id%>" hidden>
                    </div>
                </button> 
            </form>
            <% } %>
        </div>
    </main>
</body>
</html>