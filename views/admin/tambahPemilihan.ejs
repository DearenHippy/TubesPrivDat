<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/styles.css">
    <title>E-Pemilu | Admin Home</title>
    <link href="/styles/stylesNew.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script defer src="/js/scripts.js"></script>
</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->
        <a class="navbar-brand ps-3" href="/"><img src="/images/ballot.png" style="height: 35px">
            E-Pemilu
        </a>
        <!-- Sidebar Toggle-->
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <div class="sb-sidenav-menu-heading">MENU</div>
                        <a class="nav-link" href="/admin">
                            <div class="sb-nav-link-icon"><i class="fas fa-vote-yea" width="16" height="16"></i></div>
                            Pemilihan
                        </a>
                        <a class="nav-link" href="/admin/calon">
                            <div class="sb-nav-link-icon"><i class="fas fa-user-graduate" width="16" height="16"></i></div>
                            Calon
                        </a>
                        <a class="nav-link" href="/admin/pemilih">
                            <div class="sb-nav-link-icon"><i class="fas fa-users" width="16" height="16"></i></div>
                            Pemilih
                        </a>
                        <a class="nav-link" href="/logout">
                            <div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt" width="16" height="16"></i></div>
                            Keluar
                        </a>
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Login sebagai:</div>
                    <%= username %>
                </div>
            </nav>
        </div>
        <body class="sb-nav-fixed">
            <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
                <!-- Navbar Brand-->
                <a class="navbar-brand ps-3" href="/"><img src="/images/ballot.png" style="height: 35px">
                    E-Pemilu
                </a>
                <!-- Sidebar Toggle-->
                <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fas fa-bars"></i></button>
            </nav>
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="my-4">Tambah Calon</h1>
                        <div class="card mb-4">
                            <div class="card-header">
                                <svg class="svg-inline--fa fa-table me-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="table" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M64 256V160H224v96H64zm0 64H224v96H64V320zm224 96V320H448v96H288zM448 256H288V160H448v96zM64 32C28.7 32 0 60.7 0 96V416c0 35.3 28.7 64 64 64H448c35.3 0 64-28.7 64-64V96c0-35.3-28.7-64-64-64H64z"></path></svg><!-- <i class="fas fa-table me-1"></i> Font Awesome fontawesome.com -->
                                Tambah Calon
                            </div>
                            <form method="post" action="tambahPemilu">
                                <div class="form-group">
                                  <label for="exampleInputEmail1">Nama Pemilihan</label>
                                  <input type="text" class="form-control" name="namaPemilihan">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tanggal Mulai</label>
                                    <input type="datetime-local" class="form-control" name="namaPemilihan">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tanggal Selesai</label>
                                    <input type="datetime-local" class="form-control" name="namaPemilihan">
                                  </div>
                                <div class="dropdown show">
                                    <label for="exampleInputPassword1">Pilih Jenis Pemilihan</label>
                                    <select class="btn btn-secondary dropdown-toggle" name="desa" id="desa">
                                        <% for(const a of jenis) { %>
                                        <option value="<%= a.jenis%>"><%= a.jenis%></option>
                                        <%}%>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                    </div>
                </main>
            </div>
        </body>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>